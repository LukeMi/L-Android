<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/gray_bkg_first"
                android:orientation="vertical"
                tools:context="com.lukemi.myandroid.db.GreenDaoActivity">


    <LinearLayout
        android:id="@+id/op_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/insert"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="insert"/>

        <Button
            android:id="@+id/delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="delete"/>

        <Button
            android:id="@+id/update"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="update"/>

        <Button
            android:id="@+id/query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="query"/>

    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/op_menu"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/del_history"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_40"
        android:layout_below="@+id/rv_list"
        android:layout_marginTop="@dimen/view_10"
        android:background="@color/gray"
        android:gravity="center"
        android:text="@string/del_history"
        android:textColor="@color/red"
        android:textSize="@dimen/text_size_16"/>
</RelativeLayout>