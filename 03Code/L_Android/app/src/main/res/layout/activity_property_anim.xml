<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".anim.PropertyAnimActivity">

    <ImageView
        android:id="@+id/img_bkg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/pic_bkg" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/ll_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_gravity="top"
            android:background="@color/color_green_light"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible">

            <TextView
                android:id="@+id/tv_top_item_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上部 第一个"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tv_top_item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上部 第二个"
                android:textColor="@color/color_black" />

            <TextView
                android:id="@+id/tv_top_item_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="上部 第三个"
                android:textColor="@color/color_black" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp48"
            android:layout_gravity="bottom"
            android:background="@color/color_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/tv_bottom_item_1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下册 第一个"
                android:textColor="@color/color_red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bottom_item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下册  第二个"
                android:textColor="@color/color_red"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_bottom_item_3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="下册  第三个"
                android:textColor="@color/color_red"
                android:textStyle="bold" />

        </LinearLayout>
    </FrameLayout>


</android.support.constraint.ConstraintLayout>