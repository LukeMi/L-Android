<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="@dimen/dp13">

    <ImageView
        android:id="@+id/img_art"
        android:layout_width="@dimen/dp100"
        android:layout_height="@dimen/dp75"
        android:layout_marginRight="@dimen/dp10"
        android:background="@color/white"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/default_pic" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="title"
            android:textColor="@color/black_text_doc"
            android:textSize="@dimen/sp16" />

        <TextView
            android:id="@+id/text_date_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_title"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="time    auther"
            android:textColor="@color/gray_text_content1"
            android:textSize="@dimen/sp13" />


    </RelativeLayout>
</LinearLayout>