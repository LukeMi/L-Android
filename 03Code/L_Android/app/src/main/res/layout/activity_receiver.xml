<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_receiver"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:padding="@dimen/dp16">

    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shape_top_corner_4_solid_ffffff"
        android:gravity="center"
        android:hint="注册广播"
        android:maxHeight="@dimen/dp120"
        android:minHeight="@dimen/dp48"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/tv_send_custom_broadcast_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_corner_4_solid_ffffff"
        android:gravity="center"
        android:hint="发送自定义广播"
        android:maxHeight="@dimen/dp120"
        android:minHeight="@dimen/dp48"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <TextView
        android:layout_marginTop="@dimen/dp10"
        android:id="@+id/tv_register_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_top_corner_4_solid_ffffff"
        android:gravity="center"
        android:hint="发送本地广播"
        android:maxHeight="@dimen/dp120"
        android:minHeight="@dimen/dp48"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_send_out_app_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shape_top_corner_4_solid_ffffff"
        android:gravity="center"
        android:hint="发送指定广播\nwith ComponentName"
        android:maxHeight="@dimen/dp120"
        android:minHeight="@dimen/dp48"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_receiver_net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shape_top_corner_4_solid_ffffff"
        android:gravity="center"
        android:hint="当前网络类型"
        android:maxHeight="@dimen/dp120"
        android:minHeight="@dimen/dp48"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_receiver_sms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:background="@drawable/shape_top_corner_4_solid_ffffff"
        android:gravity="center"
        android:hint="短信探测"
        android:maxHeight="@dimen/dp120"
        android:minHeight="@dimen/dp48"
        android:paddingTop="@dimen/dp8"
        android:paddingBottom="@dimen/dp8"
        android:textColor="@color/black"
        android:textSize="@dimen/sp16"
        android:textStyle="bold" />


</LinearLayout>
